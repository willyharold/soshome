{% extends 'base.html.twig' %}

{% block body %}
    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\IndexController::menu')) }}

    <!-- Page Title START -->
       {% for contact in contacts %}
    <div class="page-title-section" style="background-image: url({% path contact.baniere, 'big' %});">
        <div class="container">
            <h1>{{ 'Contact' | trnas }}</h1>
            <ul>
                <li><a href="{{ path('index') }}">{{ "Home" | trans }} </a></li>
                <li><a href="{{ path('contact') }}">{{ "Contact" | trans }}</a></li>
            </ul>
        </div>
    </div>
    <!-- Page Title END -->



    <!-- Contact Boxes START -->
    <div class="section-block-grey">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-phone-square"></i>
                        <h4>{{ "Contactez-nous" | trans }}</h4>
                        <span>{{contact.telephone}}</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-map"></i>
                        <h4>{{ "Visitez-nous" | trans }}</h4>
                        <span>{{contact.adresse}}</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-envelope"></i>
                        <h4>{{ "Ecrivez-nous" | trans }}</h4>
                        <span>{{contact.email}}</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-comments-o"></i>
                        <h4>{{ "chat en direct" | trans }}</h4>
                        <span>{{contact.liveChat}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact Boxes END -->
 {% endfor %}



    <!-- Contact Form Section START -->
    <div class="section-block">
        <div class="container">
            <div class="section-heading center-holder">
                <span>{{ "Entrer en contact" | trans }}</span>
                <h3>{{ "Parlons de votre entreprise" | trans }}</h3>
                <div class="section-heading-line"></div>

            </div>
            <div class="row mt-50">
                {% for flashMessage in app.session.flashbag.get('message') %}

                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
                {% endfor %}
                <div class="contact-form-box">
                    <!-- Form Start -->
                     
                         {{ form_start(form,{'attr' :  {'class': 'contact-form'}} ) }}

                        <div class="col-md-6 col-sm-6 col-xs-12">
                           {{ form_widget(form.nom) }}
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           {{ form_widget(form.email) }}
                        </div>

                        <div class="col-md-12">
                           {{ form_widget(form.objet) }}
                        </div>

                        <div class="col-md-12">
                           {{ form_widget(form.description) }}
                        </div>
                        <div class="col-md-12">
                            <div class="center-holder">
                                <button type="submit">{{ "Envoyer Message" | trans }}</button>
                            </div>
                        </div>
                         {{ form_end(form) }}

                    <!-- Form End -->
                </div>
            </div>
        </div>
    </div>
    <!-- Contact Form Section END -->





    <!-- Map START -->
    <div id="map">
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBk25E4mNfVIEt3tNl3K1HwNZVruVoFBlA&callback=initMap">
        </script>
    </div>
    <!-- Map START -->

    {{ render(controller('App\\Controller\\IndexController::footer')) }}

{% endblock %}
