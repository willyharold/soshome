{% extends 'base.html.twig' %}



{% block body %}

    <!-- Preloader Start-->

    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\IndexController::menu')) }}
    {% for accueil in accueils %}

    <!-- Main Image Section START -->
 
    <div class="main-image-section" style="background-image: url({% path accueil.banniere1, 'banniere1' %})">
        <!-- Overlay Start -->
        <div class="medium-overlay"></div>
        <!-- Overlay End -->

        <div class="main-image-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                        
                        <div class="center-holder">
                            {% if locale == 'fr' %}
                                <h2>
                                    {{accueil.titreFr}}
                                </h2>
                                <p>
                                    {{accueil.descriptionFr}}
                                </p>
                            {% else %}
                                <h2>
                                    {{accueil.titreEn}}
                                </h2>
                                <p>
                                    {{accueil.descriptionEn}}
                                </p>
                            {% endif %}

                            <div class="mt-30">
                                <a href="{{ path('service') }}" class="primary-button button-md">{{ "En savoir plus" | trans }}</a>
                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Image Section END -->




    <!-- Feature Boxes Section START -->
    <div class="section-block">
        <div class="container">
            <div class="section-heading center-holder">
                <h3>{{ "Nos Services" | trans }}</h3>
                <div class="section-heading-line"></div>
            </div>
            <div class="row mt-50">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="feature-box-long">
                        <i class="icon-target"></i>
                        <h3>{{ "La sécurité" | trans }}</h3>
                       
                        <p> {{ "La sécurité dans les domaines suivants les télécommunications, la vidéo-protection, la télésurveillance." | trans }} </p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="feature-box-long">
                        <i class="icon-diamond"></i>
                        <h3>{{ "Le génie logiciel" | trans }}</h3>
                        <p>{{ "Le génie logiciel dans les domaines de la domotique et les télécommunications." | trans }}</p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="feature-box-long">
                        <i class="icon-bank"></i>
                        <h3>{{ "L'audit" | trans }}</h3>
                        <p> {{ "L'audit en matière de sureté et sécurisation des sites et systèmes de sécurités" | trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Feature Boxes Section END -->





    <!-- Background Section START -->
    <div class="section-block-bg" style="background-image: url({% path accueil.banniere2, 'banniere2' %})">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-offset-6">
                    <div class="section-heading">
                        <h4>{{ "SOS HOME & PARTNERS" | trans }}</h4>
                        <div class="section-heading-line-left"></div>
                    </div>
                    <div class="text-content-big mt-20" >
                        <p style="color: black !important;">{{ "c'est le fruit de la croisée entre une ambition locale et un désir réel d'une jeunesse camerounaise pour soutenir, réaliser et apporter sa pierre a l'édifice de l'essort économique de notre pays le Cameroun." | trans }}</p>

                    </div>
                    <div class="mt-25">
                        <ul class="primary-list">
                             </ul>
                    </div>
                    <div class="mt-35">
                        <a href="{{ path('about') }}" class="primary-button button-md">{{ "En savoir plus" | trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Background Section END -->


     {% endfor %}



    <!-- Testmonials START -->
    <div class="section-block">
        <div class="container">
            <div class="section-heading center-holder">
                <h3> {{ "Que disent les clients" | trans }}</h3>
                <div class="section-heading-line"></div>
            </div>
            <div class="owl-carousel owl-theme mt-30" id="testmonial-item">
                {% for temoignage in temoignages %}

                    {% if locale == 'fr' %}
                        <div class="testmonial-item">
                            <div class="testmonial-item-bxx">
                                <p> {{temoignage.descriptionFr}}</p>
                                <div class="testmonial-arrow"> </div>
                            </div>
                            <div class="testmonial-item-bxx-img">
                                <div class="testmonial-item-img">
                                    {% media temoignage.image, 'big' %}
                                </div>
                                <div class="testmonial-item-name">
                                    <h4>{{temoignage.nom}}</h4>
                                    <span>{{temoignage.titreFr}}</span>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="testmonial-item">
                            <div class="testmonial-item-bxx">
                                <p> {{temoignage.descriptionEn}}</p>
                                <div class="testmonial-arrow"> </div>
                            </div>
                            <div class="testmonial-item-bxx-img">
                                <div class="testmonial-item-img">
                                    {% media temoignage.image, 'big' %}
                                </div>
                                <div class="testmonial-item-name">
                                    <h4>{{temoignage.nom}}</h4>
                                    <span>{{temoignage.TitreEn}}</span>
                                </div>
                            </div>
                        </div>
                    {% endif %}


                {% endfor %}

              

            
            </div>
        </div>
    </div>
                
    <!-- Testmonials END -->


    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-newsletter">
            <div class="modal-content">
                    <div class="modal-header">
                        <h4>  {{ "S'inscrire a notre newsletter" | trans }} </h4>
                    </div>
                    <div class="modal-body">
                        <p>{{ "Abonnez-vous à chaque newsletter pour rester connecté à l'actualité !" | trans }}</p>
                        {{ form_start(form,{'attr' :  {'class': 'contact-form'}}) }}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_widget(form.email,{'attr' :  {'class': 'form-control','placeholder':'Email'}}) }}

                            </div>

                            <div class="col-md-12">
                                <div class="center-holder">
                                    <button type="submit"> {{ "S'inscrire" | trans }}</button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

            </div>
        </div>
    </div>


    {{ render(controller('App\\Controller\\IndexController::partenaire')) }}

    {{ render(controller('App\\Controller\\IndexController::footer')) }}


{% endblock %}

{% block script %}

    {% if not app.session.get('newsletter') %}
    <script>
        $(document).ready(function(){
            $("#myModal").modal('show');
        });
    </script>
    {% endif %}
{% endblock %}