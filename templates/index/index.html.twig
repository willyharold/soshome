{% extends 'base.html.twig' %}



{% block body %}

    <!-- Preloader Start-->

    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\IndexController::menu')) }}
    {% for accueil in accueils %}

    <!-- Main Image Section START -->
 
    <div class="main-image-section" style="background-image: url({% path accueil.banniere1, 'banniere1' %})">
        <!-- Overlay Start -->
        <div class="medium-overlay"></div>
        <!-- Overlay End -->

        <div class="main-image-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                        
                        <div class="center-holder">
                            <h2>
                               {{accueil.titreFr}}
                            </h2>
                            <p>
                                {{accueil.descriptionFr}}
                            </p>
                            <div class="mt-30">
                                <a href="{{ path('service') }}" class="primary-button button-md">En savoir plus</a>
                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Image Section END -->




    <!-- Feature Boxes Section START -->
    <div class="section-block">
        <div class="container">
            <div class="section-heading center-holder">
                <h3>Nos services</h3>
                <div class="section-heading-line"></div>
            </div>
            <div class="row mt-50">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="feature-box-long">
                        <i class="icon-target"></i>
                        <h3>La sécurité</h3>
                        <p>La sécurité dans les domaines suivants les télécommunications, la vidéo-protection, la télésurveillance.</p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="feature-box-long">
                        <i class="icon-diamond"></i>
                        <h3>Le génie logiciel</h3>
                        <p>Le génie logiciel dans les domaines de la domotique et les télécommunications.</p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="feature-box-long">
                        <i class="icon-bank"></i>
                        <h3>L'audit</h3>
                        <p>L'audit en matière de sureté et sécurisation des sites et systèmes de sécurités</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Feature Boxes Section END -->





    <!-- Background Section START -->
    <div class="section-block-bg" style="background-image: url({% path accueil.banniere2, 'banniere2' %})">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-offset-6">
                    <div class="section-heading">
                        <span>Improve your business with us !</span>
                        <h4>First class business solutions since 1995</h4>
                        <div class="section-heading-line-left"></div>
                    </div>
                    <div class="text-content-big mt-20">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                            quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                            consequat.</p>
                    </div>
                    <div class="mt-25">
                        <ul class="primary-list">
                            <li><i class="fa fa-check-square"></i>Immigration consultant, Information technology consulting</li>
                            <li><i class="fa fa-check-square"></i>Consultant pharmacist Creative consultant</li>
                            <li><i class="fa fa-check-square"></i>Employment consultant Environmental consultant</li>
                        </ul>
                    </div>
                    <div class="mt-35">
                        <a href="{{ path('about') }}" class="primary-button button-md">En savoir plus</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Background Section END -->


     {% endfor %}



    <!-- Testmonials START -->
    <div class="section-block">
        <div class="container">
            <div class="section-heading center-holder">
                <h3>Que disent les clients</h3>
                <div class="section-heading-line"></div>
            </div>
            <div class="owl-carousel owl-theme mt-30" id="testmonial-item">
                <div class="testmonial-item">
                    {% for temoignage in temoignages %}
                    <div class="testmonial-item-bxx">
                        <p> {{temoignage.descriptionFr}}</p>
                        <div class="testmonial-arrow"> </div>
                    </div>
                    <div class="testmonial-item-bxx-img">
                        <div class="testmonial-item-img">
                                {% media temoignage.image, 'big' %}
                        </div>
                        <div class="testmonial-item-name">
                            <h4>{{temoignage.nom}}</h4>
                            <span>{{temoignage.titreFr}}</span>
                        </div>
                    </div>
                      {% endfor %}
                </div>

              

            
            </div>
        </div>
    </div>
                
    <!-- Testmonials END -->


    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-newsletter">
            <div class="modal-content">
                    <div class="modal-header">
                        <h4>S'inscrire a notre newsletter</h4>
                    </div>
                    <div class="modal-body">
                        <p>Signup for our weekly newsletter to get the latest news, updates and amazing offers delivered directly in your inbox.</p>
                        <form action="/examples/actions/confirmation.php" method="post" class="contact-form">
                        <div class="row">
                            <div class="col-md-12">
                                <input type="email" class="form-control" placeholder="Email" required>

                            </div>

                            <div class="col-md-12">
                                <div class="center-holder">
                                    <button type="submit">S'inscrire</button>
                                </div>
                            </div>
                        </div>

                        </form>
                    </div>

            </div>
        </div>
    </div>


    {{ render(controller('App\\Controller\\IndexController::partenaire')) }}

    {{ render(controller('App\\Controller\\IndexController::footer')) }}


{% endblock %}

{% block script %}

    <script type="text/javascript">
        $(document).ready(function(){
            $("#myModal").modal('show');
        });
    </script>
{% endblock %}